#!groovy

pipeline{
  agent any
  tools{
    maven 'mvn'
    jdk 'java8'
    sonar 'sonar'
  }
  stages{
    stage('Initialize'){
      steps{
        echo "PATH = ${PATH}"
        echo "M2_HOME = ${M2_HOME}"
      }
    }
    stage('checkout'){
      steps{
        checkout scm
      }
    }
    stage('Build') {
      steps{
        bat "mvn --version"
        bat "mvn clean compile package"
        bat "mvn sonar:sonar"
      }
    }
    
    
  }  
}
