#!groovy

pipeline{
  agent any
  tools{
    maven 'mvn'
    jdk 'java'
  }
  stages{
    stage 'Initialize'{
      steps{
        echo "PATH = ${PATH}"
        echo "M2_HOME = ${M2_HOME}"
      }
    }
    stage('checkout'){
      steps{
        checkout scm
      }
    }
    stage('Build') {
      steps{
        sh "mvn --version"
      }
    }
  }  
}
